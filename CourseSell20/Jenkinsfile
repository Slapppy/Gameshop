pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Получаем исходный код проекта
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    def dockerComposeFile = "/docker-compose.yml"
                    sh "docker-compose -f {dockerComposeFile} build"
                    // Другие шаги сборки и тестирования
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    def dockerComposeFile = "$./docker-compose.yml"
                    sh "docker-compose -f ${dockerComposeFile} up -d --build"
                }
            }
        }
    }
}
