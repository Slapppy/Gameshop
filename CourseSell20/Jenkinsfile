pipeline {
    agent any

    environment {
        DJANGO_SETTINGS_MODULE = 'CourseSell20.settings'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    docker.build("CourseSell20", "-f ./Dockerfile ./CourseSell20")
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    docker.image("CourseSell20").run("--rm -e DJANGO_SETTINGS_MODULE=CourseSell20.settings python manage.py test")
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker-compose up -d --build
                }
            }
        }
    }

    post {
        success {
            script {
                currentBuild.result = 'SUCCESS'
            }
        }
        failure {
            script {
                currentBuild.result = 'FAILURE'
            }
        }
    }
}
